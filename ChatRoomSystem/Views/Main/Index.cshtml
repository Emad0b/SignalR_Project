    <div class="container">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app">
                    <div class="chat">
                        <div class="chat-header clearfix">
                            <div class="row">
                                <div class="col-lg-6">
                                    <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar2.png"  alt="avatar">
                                    </a>
                                    <div class="chat-about">
                                        <h6 class="m-b-0">{{userName}}</h6>
                                    </div>
                                </div>
                                <div class="col-lg-6 hidden-sm text-right">
                                    <a href="javascript:void(0);" class="btn btn-outline-secondary"><i class="fa fa-camera"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-outline-primary"><i class="fa fa-image"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-outline-info"><i class="fa fa-cogs"></i></a>
                                    <a href="javascript:void(0);" class="btn btn-outline-warning"><i class="fa fa-question"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="chat-history">
                            <ul class="m-b-0">
                                <li class="clearfix" ng-repeat="msg in messages">

                                    <div class="message-data"
                                         ng-class="{'float-left': msg.senderId != LoggedId, 'float-right': msg.senderId == LoggedId}">
                                        <span class="message-data-time">{{ Date(msg.timestamp) }}</span>
                                        <strong>{{ msg.senderName }}</strong>
                                    </div>

                                    <div class="message"
                                         ng-class="{'my-message float-right': msg.senderId ==LoggedId, 'other-message float-left': msg.senderId != LoggedId}">
                                        {{ msg.content }}
                                    </div>

                                </li>
                            </ul>

                        </div>
                        <div class="chat-message clearfix">
                            <div class="input-group mb-0">
                                <div class="input-group-prepend" ng-click="sendMessage()">
                                    <span class="input-group-text"><i class="fa fa-send"></i></span>
                                </div>
                                <input type="text" ng-model="message" class="form-control" ng-keypress="EnterButton($event)" placeholder="Enter text here...">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
