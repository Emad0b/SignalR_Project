<section class="vh-100" ng-controller="LoginController" >
    <div class="container-fluid h-custom" style="background-color: #ffffff; color: #000000;">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1"
                 style="background-color: #f8f9fa; border-radius:8px; padding-bottom:10px; padding-top:10px;">
                <form name="loginForm" ng-submit="login()">

                    <!-- Username input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" style="color: #000000;">Username</label>
                        <input type="text" class="form-control full-width-input" ng-model="userName" required
                               style="background-color: #ffffff; color: #000000; border: 1px solid #ccc;" />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3 position-relative">
                        <label class="form-label" style="color: #000000;">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control full-width-input" id="password"
                                   ng-model="password" required
                                   style="background-color: #ffffff; color: #000000; border: 1px solid #ccc;" />
                            <span class="input-group-text bg-secondary text-white" id="togglePassword"
                                  style="cursor: pointer; border-radius: 0;">
                                <i class="fa fa-eye"></i>
                            </span>
                        </div>
                        <div ng-show="loginForm.password.$touched && loginForm.password.$invalid">
                            <span class="text-danger">Password is required.</span>
                        </div>
                    </div>

                    <!-- Submit button -->
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem; background-color: #BE9F57; border: none;">
                            Login
                        </button>
                    </div>

                    <!-- Sign-up redirect -->
                    <div class="text-center mt-3">
                        <p>Don't have an account? <a ng-href="#/Signup" class="text-primary">Sign Up</a></p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#togglePassword').click(function () {
            var passwordField = $('#password');
            var type = passwordField.attr('type') === 'password' ? 'text' : 'password';
            passwordField.attr('type', type);

            var icon = $(this).find('i');
            icon.toggleClass('fa-eye fa-eye-slash');
        });
    });
</script>

<style>
    .form-control {
        border-radius: 0.25rem;
    }

    .input-group-text {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.375rem 0.75rem;
        border: none;
    }

    .btn-primary {
        background-color: #BE9F57 !important;
        border: none;
    }
</style>
